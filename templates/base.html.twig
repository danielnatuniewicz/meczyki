<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    </head>
    <body class="bg-dark text-white">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-info">
            <div class="container">
                <a class="navbar-brand" href="{{ path('index') }}">Meczyki</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('view_top_authors') }}">Ranking</a>
                        </li>
                       <li class="nav-item">
                            <a class="nav-link" href="{{ path('add_article') }}">Dodaj artykuł</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('index') }}">Lista Artykułów</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-nav ml-auto">
                {% if app.user %}
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    
                {% else %}               
                    <a class="nav-link" href="/login">Logowanie</a>
                {% endif %}
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}
    </body>

    <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/js/script.js') }}"></script>
</html>
